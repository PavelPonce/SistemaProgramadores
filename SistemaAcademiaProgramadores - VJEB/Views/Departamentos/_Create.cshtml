@model SistemaAcademiaProgramadores.Models.tbDepartamentos



    @Html.AntiForgeryToken()
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })

      
            <div class="col-sm-6 mb-2">
                    @Html.LabelFor(model => model.Depar_Id, new { @class = "text-primary w-100 text-left" })
                    <div >
                        @Html.EditorFor(model => model.Depar_Id, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Depar_Id, "", new { @class = "text-danger" })
                        </div>
            </div>
      
            <div class="col-sm-6 mb-2">
                    @Html.LabelFor(model => model.Depar_Descripcion, new { @class = "text-primary w-100 text-left" })
                    <div >
                        @Html.EditorFor(model => model.Depar_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Depar_Descripcion, "", new { @class = "text-danger" })
                        </div>
            </div>
           
            <script>
        document.querySelectorAll('.col-sm-6.mb-2').forEach(grupo => {
            grupo.children[1].children[0].addEventListener('focus', () => {
                grupo.children[0].classList.add('text-secondary')
            })
            grupo.children[1].children[0].addEventListener('blur', () => {
                grupo.children[0].classList.remove('text-secondary')
            })
        })
    </script>
  



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
