@model SistemaAcademiaProgramadores.Models.tbUsuarios


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body form-row">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.HiddenFor(model => model.Usuar_Id)

        <div class="col-sm-6 mb-2">

            @Html.LabelFor(model => model.Usuar_Usuario, new { @class = "text-primary w-100 text-left" })
            <div>
                @Html.EditorFor(model => model.Usuar_Usuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Usuar_Usuario, "", new { @class = "text-danger" })
            </div>
        </div>
        }
        <div class="col-sm-6 mb-2">

            @Html.LabelFor(model => model.Usuar_Contrasena, new { @class = "text-primary w-100 text-left" })
            <div>
                @Html.EditorFor(model => model.Usuar_Contrasena, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Usuar_Contrasena, "", new { @class = "text-danger" })
            </div>
        </div>
        }
        <div class="col-sm-6 mb-2">

            @Html.LabelFor(model => model.Usuar_UltimaSesion, new { @class = "text-primary w-100 text-left" })
            <div>
                @Html.EditorFor(model => model.Usuar_UltimaSesion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Usuar_UltimaSesion, "", new { @class = "text-danger" })
            </div>
        </div>
        }
        <div class="col-sm-6 mb-2">

            @Html.LabelFor(model => model.Instr_Id, "Instr_Id", new { @class = "text-primary w-100 text-left" })
            <div>
                @Html.DropDownList("Instr_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Instr_Id, "", new { @class = "text-danger" })
            </div>
        </div>
        }
        <div class="col-sm-6 mb-2">

            @Html.LabelFor(model => model.Roles_Id, "Roles_Id", new { @class = "text-primary w-100 text-left" })
            <div>
                @Html.DropDownList("Roles_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Roles_Id, "", new { @class = "text-danger" })
            </div>
        </div>
        }
        <div class="col-sm-6 mb-2">

            @Html.LabelFor(model => model.Usuar_Admin, new { @class = "text-primary w-100 text-left" })
            <div>
                <div class="checkbox">
                    @Html.EditorFor(model => model.Usuar_Admin)
                    @Html.ValidationMessageFor(model => model.Usuar_Admin, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        }

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
        <button type="button" class="btn btn-primary btn-outline" data-dismiss="modal">
            <i class="fa fa-times"></i> Cancelar
        </button>
    </div>
    <script>
        document.querySelectorAll('.col-sm-6.mb-2').forEach(grupo => {
            grupo.children[1].children[0].addEventListener('focus', () => {
                grupo.children[0].classList.add('text-secondary')
            })
            grupo.children[1].children[0].addEventListener('blur', () => {
                grupo.children[0].classList.remove('text-secondary')
            })
        })
    </script>

   

}
