@model IEnumerable<SistemaAcademiaProgramadores.Models.tbCentrosEducativos>

@{
    ViewBag.Title = $"tbCentrosEducativos".Substring(2);  
    ViewBag.Title = ViewBag.Title.Substring(0, ViewBag.Title.Length - 1);

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h1 class="text-primary" style="font-size: 1.8rem;">@ViewBag.Title</h1>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href='@Url.Action("Index", "Home")' class="btn btn-primary"><i class="glyphicon glyphicon-home"></i> Inicio</a>
        </div>
    </div>
</div>
<section class="content">

<div class="card">
<div class="card-body">
    <div class="text-left w-100 mb-4">
        <button class="btnNuevo btn btn-primary btn-outline">
            <i class="fa fa-plus-square-o"> </i> Nuevo
        </button>
        @*<a href="@Url.Action("Create")" class="btn btn-primary btn-outline">
            <i class="fa fa-plus-square-o"> </i> Nuevo
        </a>*@
    </div>

    <div class="w-100" style="overflow-x:scroll;">
        <table class="table table-striped table-bordered dataTables-example">
        <thead>
            <tr class="thead-purple thead-justify-content-center">
                                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.CenEd_Nombre)
                </th>
                                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.CenEd_Direccion)
                </th>
                                <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.CenEd_Tipo)
                </th>
                                                                                        <th class="bg-primary">
                    @Html.DisplayNameFor(model => model.tbMunicipios.Munic_Descripcion)
                </th>
                    
                <th class="bg-primary" style="max-width: 50px;">Acciones</th>
           
            </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
            <tr>
                                <td>
                    @Html.DisplayFor(modelItem => item.CenEd_Nombre)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.CenEd_Direccion)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.CenEd_Tipo)
                </td>
                                                                                        <td>
                    @Html.DisplayFor(modelItem => item.tbMunicipios.Munic_Descripcion)
                </td>
                        <td>
                    <div class="d-flex justify-content-center align-items-center form-group mx-2" style="gap: 10px;">
                        <button data-id="@item.CenEd_Id" class="btnEditar btn btn-warning btn-outline btn-xs col-sm-4">
                            <i class="fa fa-edit (alias)"></i>
                            Editar
                        </button>
                        @*<a class="btn btn-warning btn-outline btn-xs col-sm-4" href="@Url.Action("Edit", new { id=item.CenEd_Id })">
                            <i class="fa fa-edit (alias)"></i>
                            Editar
                        </a>*@
                         <a class="btn btn-info btn-outline btn-xs col-sm-4" href="@Url.Action("Details", new { id=item.CenEd_Id })" >
                            <i class="fa fa-eye"></i>
                            Detalles
                        </a>
                        <button data-id="@item.CenEd_Id" class="btnEliminar btn btn-danger btn-outline btn-xs col-sm-4">
                            <i class="fa fa-trash-o"></i>
                            Eliminar
                        </button>
                        @*<a class="btn btn-danger btn-outline btn-xs col-sm-4" href="@Url.Action("Delete", new { id=item.CenEd_Id })">
                            <i class="fa fa-trash-o"></i>
                            Eliminar
                        </a>*@
                    </div>
                </td>
           
                    </tr>
        }
        </tbody>
        </table>
    </div>    
</div>

</div>

</section>

@Scripts.Render("~/Content/HTML5_Full_Version/js/jquery-3.1.1.min.js")

<script>
    

    $('.btnEditar').click(function () {
        var id = $(this).data("id");

        $.ajax({
            url: "/Home/llenarInputs",
            method: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ id: id, spLlenarEditar: 'tbCentrosEducativos' }),

            success: function (data) {
                $.each(data, function (key, value) {
                    $('#CenEd_Id').val(value.CenEd_Id)
                    $('#CenEd_Nombre').val(value.CenEd_Nombre)
                    $('#CenEd_Direccion').val(value.CenEd_Direccion)
                    $('#CenEd_Tipo').val(value.CenEd_Tipo)
                    $('#Depar_Id').val(value.Depar_Id)

                    console.log($('#Depar_Id').length)

                    cargarDDLMunicipiosEditar();
                
                    $('#Munic_Id').val(value.Munic_Id)
                })
            },
        })
        $('#modalEditar').modal('show');
    })

    $('.btnEliminar').click(function () {
        var id = $(this).data("id");
        $.ajax({
            url: "/Home/llenarInputs",
            method: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ id: id, spLlenarEditar: 'tbCentrosEducativos' }),

            success: function (data) {
                $.each(data, function (key, value) {
                    $('#Row_Id').val(value.CenEd_Id)
                })

            },

        })
        $('#modalEliminar').modal('show');
    })

    $('.btnNuevo').click(function () {
        $('#modalNuevo').modal('show');
    })

    function cargarDDLMunicipiosEditar() {
        var id = $('#Depar_Id').val();
        $.ajax({
            url: "/Home/cargarDDLMunicipios",
            method: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ id: id }),

            success: function (data) {
                $('#Munic_Id').empty();
                $.each(data, function (key, value) {
                    var option = $('<option></option>')
                        .text(value.Munic_Descripcion)
                        .val(value.Munic_Id);

                    $('#Munic_Id').append(option);
                })
            },
        })
    }
</script>



<div class="modal" id="modalEditar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar @ViewBag.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                @Html.Partial("_Edit", new SistemaAcademiaProgramadores.Models.tbCentrosEducativos())
            
                
        </div>
    </div>
</div>



<div class="modal" id="modalNuevo" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear @ViewBag.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                @Html.Partial("_Create", new SistemaAcademiaProgramadores.Models.tbCentrosEducativos())
            
        </div>
    </div>
</div>


<div class="modal" id="modalEliminar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar @ViewBag.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="card-body form-row justify-content-center">
                Esta seguro que desea eliminar este registro?
            </div>
            @Html.Partial("_Delete", new SistemaAcademiaProgramadores.Models.tbCentrosEducativos())

        </div>
    </div>
</div>


