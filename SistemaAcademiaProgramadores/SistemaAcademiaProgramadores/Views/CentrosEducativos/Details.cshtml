@model SistemaAcademiaProgramadores.Models.tbCentrosEducativos

@{
    ViewBag.Title = $"tbCentrosEducativos".Substring(2);
    ViewBag.Title = ViewBag.Title.Substring(0, ViewBag.Title.Length - 1);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h1 class="text-primary">Detalle @ViewBag.Title</h1>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href='@Url.Action("Index")' class="btn btn-primary"><i class="glyphicon glyphicon-arrow-left"></i> Regresar</a>
        </div>
    </div>
</div>
<section class="content">

<div class="card">
<div class="card-body">
        <div class="form-row justify-content-center">
    @Html.HiddenFor(model => model.CenEd_Id, new { @id = "Item_Id"})
      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.CenEd_Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CenEd_Nombre)
            </dd>
        </dl>
     </div>

      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.CenEd_Direccion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CenEd_Direccion)
            </dd>
        </dl>
     </div>

      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.CenEd_Tipo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CenEd_Tipo)
            </dd>
        </dl>
     </div>

      
      
      
      
      
      
      
      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.tbMunicipios.Munic_Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tbMunicipios.Munic_Descripcion)
            </dd>
        </dl>
     </div>

    </div>
            <div class="d-flex justify-content-end" style="gap: 10px;">

            <button class="btnEditar btn btn-primary btn-outline">
                <i class="fa fa-edit mr-2"></i>Editar
            </button>
            <button class="btnEliminar btn btn-danger btn-outline" onclick="Eliminar()">
                <i class="fa fa-trash mr-2"></i>Eliminar
            </button>
            @*<a class="btn btn-primary btn-outline" href="@Url.Action("Edit", new { id = Model.CenEd_Id })">
                <i class="fa fa-edit mr-2"></i>Editar
            </a>*@
        </div>
    </div>
<div class="card-footer">
    <div class="card-title text-primary mb-4" style="font-size: 1.5rem;"> Auditoria </div>
    <div class="w-100" style="overflow-x:scroll;">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="thead-purple thead-justify-content-center">
                    <th class="bg-primary">Accion</th>
                    <th class="bg-primary">Usuario</th>
                    <th class="bg-primary">Fecha</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Creacion</td>
                                                                                                                                                                                                                                                <td>
                                @Html.DisplayFor(model => model.tbUsuarios.Usuar_Usuario)
                            </td>
                                                                    
                                                                                                                                <td>
                                @Html.DisplayFor(model => model.CenEd_FechaCreacion)
                            </td>
                                                                                                                                                                                </tr>
            
                <tr>
                    <td>Modificacion</td>
                                                                                                                                                                                                                                                                    <td>
                                @Html.DisplayFor(model => model.tbUsuarios1.Usuar_Usuario)
                            </td>
                                                
                                                                                                                                                    <td>
                                @Html.DisplayFor(model => model.CenEd_FechaModificacion)
                            </td>
                                                                                                                                                            </tr>
            </tbody>
        </table>
    </div>
</div>
</div>
</section>
@Scripts.Render("~/Content/HTML5_Full_Version/js/jquery-3.1.1.min.js")

<script>
    $('.btnEditar').click(function () {
        var id = document.getElementById("Item_Id").value;

        $.ajax({
            url: "/Home/llenarInputs",
            method: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({id : id, spLlenarEditar : 'tbCentrosEducativos'}),

            success: function (data) {
                $.each(data, function (key, value) {
                    $('#CenEd_Id').val(value.CenEd_Id)
                    $('#CenEd_Nombre').val(value.CenEd_Nombre)
                    $('#CenEd_Direccion').val(value.CenEd_Direccion)
                    $('#CenEd_Tipo').val(value.CenEd_Tipo)
                    $('#Depar_Id').val(value.Depar_Id)

                    var id = $('#Depar_Id').val();
                    $.ajax({
                        url: "/Home/cargarDDLMunicipios",
                        method: "POST",
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({ id: id }),

                        success: function (data) {
                            $('#Munic_Id').empty();
                            $.each(data, function (key, value) {
                                var option = $('<option></option>')
                                    .text(value.Munic_Descripcion)
                                    .val(value.Munic_Id);
                                $('#Munic_Id').append(option);
                            })
                        },
                    })
                    $('#Munic_Id').val(value.Munic_Id)
                })
            },
            
        })

        $('#modalEditar').modal('show');
    })

    $('#Depar_Id').change(function () {
        var id = $('#Depar_Id').val();
        $.ajax({
            url: "/Home/cargarDDLMunicipios",
            method: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ id: id }),

            success: function (data) {
                $('#Munic_Id').empty();
                $.each(data, function (key, value) {
                    var option = $('<option></option>')
                        .text(value.Munic_Descripcion)
                        .val(value.Munic_Id);

                    $('#Munic_Id').append(option);
                })
            },
        })
    })

    function Eliminar()
    {
        var id = document.getElementById("Item_Id").value;
        $('#Row_Id').val(id);

        localStorage.setItem("Row_Id", id);

        $('#modalEliminar').modal('show');
    }
</script>


<div class="modal" id="modalEditar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar @ViewBag.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                @Html.Partial("_Edit", new SistemaAcademiaProgramadores.Models.tbCentrosEducativos())
         
                
        </div>
    </div>
</div>


<div class="modal" id="modalEliminar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar @ViewBag.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="card-body form-row justify-content-center">
                Esta seguro que desea eliminar este registro?
            </div>
            @Html.Partial("_Delete", new SistemaAcademiaProgramadores.Models.tbCentrosEducativos())

        </div>
    </div>
</div>

