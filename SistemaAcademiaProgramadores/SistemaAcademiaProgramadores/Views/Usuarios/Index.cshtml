@model IEnumerable<SistemaAcademiaProgramadores.Models.tbUsuarios>

@{
    ViewBag.Title = $"tbUsuarios".Substring(2);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h1 class="text-primary" style="font-size: 1.8rem;">@ViewBag.Title</h1>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href='@Url.Action("Index", "Home")' class="btn btn-primary"><i class="glyphicon glyphicon-home"></i> Inicio</a>
        </div>
    </div>
</div>
<section class="content">

    <div class="card">
        <div class="card-body">
            <div class="text-left w-100 mb-4">
                <button @*href="@Url.Action("Create")"*@ id="btnNuevo" type="button" class="btn btn-primary btn-outline" style="font-size: 1.2rem;">
                    <i class="fa fa-plus-square-o"> </i> Nuevo
                </button>
            </div>

            <div class="w-100" style="overflow-x:scroll;">
                <table class="table table-striped table-bordered dataTables-example">
                    <thead>
                        <tr class="thead-purple thead-justify-content-center">
                            <th class="bg-primary">
                                @Html.DisplayNameFor(model => model.Usuar_Usuario)
                            </th>
                            <th class="bg-primary">
                                @Html.DisplayNameFor(model => model.Usuar_UltimaSesion)
                            </th>
                            <th class="bg-primary">
                                @Html.DisplayNameFor(model => model.Usuar_Admin)
                            </th>
                            <th class="bg-primary">
                                @Html.DisplayNameFor(model => model.tbInstructores2.Perso_Id)
                            </th>
                            <th class="bg-primary">
                                @Html.DisplayNameFor(model => model.tbRoles2.Roles_Descripcion)
                            </th>

                            <th class="bg-primary">Acciones</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuar_Usuario)
                                </td>
                             
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuar_UltimaSesion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuar_Admin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbInstructores2.Perso_Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbRoles2.Roles_Descripcion)
                                </td>
                                <td>
                                    <div class="d-flex justify-content-around align-items-center form-group mx-2" style="gap: 10px;">
                                        <button id="btnEditar" type="button" class="btn btn-warning btn-outline btn-xs col-sm-4" @*href="@Url.Action("Edit", new { id=item.Usuar_Id })"*@>
                                            <i class="fa fa-edit mr-1"></i>
                                            Editar
                                        </button>
                                        <a class="btn btn-danger btn-outline btn-xs col-sm-4" href="@Url.Action("Delete", new { id=item.Usuar_Id })">
                                            <i class="fa fa-trash-o mr-1"></i>
                                            Eliminar
                                        </a>
                                        <a class="btn btn-info btn-outline btn-xs col-sm-4" href="@Url.Action("Details", new { id=item.Usuar_Id })">
                                            <i class="fa fa-eye mr-1"></i>
                                            Detalles
                                        </a>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</section>

@Scripts.Render("~/Content/HTML5_Full_Version/js/jquery-3.1.1.min.js")

<script>
    $('#btnNuevo').click(function () {
        $('#modalNuevo').modal('show');
    })

    $('#btnEditar').click(function () {
        $('#modalEditar').modal('show');
    })
</script>

<div class="modal" id="modalNuevo" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @Html.Partial("_Create", new SistemaAcademiaProgramadores.Models.tbUsuarios())
        </div>
    </div>
</div>

<div class="modal" id="modalEditar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @Html.Partial("_Edit", new SistemaAcademiaProgramadores.Models.tbUsuarios())
        </div>
    </div>
</div>