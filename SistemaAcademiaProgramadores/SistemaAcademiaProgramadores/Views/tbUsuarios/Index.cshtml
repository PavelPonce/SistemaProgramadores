@model IEnumerable<SistemaAcademiaProgramadores.Models.tbUsuarios>

@{
    ViewBag.Title = $"tbUsuarios".Substring(2);
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content">

<div class="card">
<div class="card-header">
<h3 class="card-title">@ViewBag.Title</h3>
<div class="card-tools">
<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
<i class="fa fa-minus"></i>
</button>
<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
<i class="fa fa-times"></i>
</button>
</div>
</div>
<div class="card-body">
    <div class="card-title">
        <a href="@Url.Action("Create")" class="btn btn-primary col-sm-12 mb-4">
            <i class="fa fa-plus-square-o"> </i> Nuevo
        </a>
    </div>

        
    <table class="table table-responsive table-striped table-bordered dataTables-example dataTable">
        <tr class="thead-purple thead-justify-content-center">
                    <th>
                @Html.DisplayNameFor(model => model.Usuar_Usuario)
            </th>
                    <th>
                @Html.DisplayNameFor(model => model.Usuar_Contrasena)
            </th>
                    <th>
                @Html.DisplayNameFor(model => model.Usuar_UltimaSesion)
            </th>
                    <th>
                @Html.DisplayNameFor(model => model.Usuar_Admin)
            </th>
                    <th>
                @Html.DisplayNameFor(model => model.Usuar_FechaCreacion)
            </th>
                    <th>
                @Html.DisplayNameFor(model => model.Usuar_FechaModificacion)
            </th>
                    <th>
                @Html.DisplayNameFor(model => model.Usuar_Estado)
            </th>
                                                            <th>
                @Html.DisplayNameFor(model => model.tbInstructores2.Perso_Id)
            </th>
                                                    <th>
                @Html.DisplayNameFor(model => model.tbRoles2.Roles_Descripcion)
            </th>
                                                                                                <th>
                @Html.DisplayNameFor(model => model.tbUsuarios2.Usuar_Usuario)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.tbUsuarios3.Usuar_Usuario)
            </th>
                
            <th></th>
           
        </tr>

    @foreach (var item in Model) {
        <tr>
                    <td>
                @Html.DisplayFor(modelItem => item.Usuar_Usuario)
            </td>
                    <td>
                @Html.DisplayFor(modelItem => item.Usuar_Contrasena)
            </td>
                    <td>
                @Html.DisplayFor(modelItem => item.Usuar_UltimaSesion)
            </td>
                    <td>
                @Html.DisplayFor(modelItem => item.Usuar_Admin)
            </td>
                    <td>
                @Html.DisplayFor(modelItem => item.Usuar_FechaCreacion)
            </td>
                    <td>
                @Html.DisplayFor(modelItem => item.Usuar_FechaModificacion)
            </td>
                    <td>
                @Html.DisplayFor(modelItem => item.Usuar_Estado)
            </td>
                                                            <td>
                @Html.DisplayFor(modelItem => item.tbInstructores2.Perso_Id)
            </td>
                                                    <td>
                @Html.DisplayFor(modelItem => item.tbRoles2.Roles_Descripcion)
            </td>
                                                                                                <td>
                @Html.DisplayFor(modelItem => item.tbUsuarios2.Usuar_Usuario)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.tbUsuarios3.Usuar_Usuario)
            </td>
                <td>
                <div class="form-group">
                    <a class="btn btn-editar col-sm-4" href="@Url.Action("Edit", new { id=item.Usuar_Id })">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a class="btn btn-danger col-sm-4" href="@Url.Action("Delete", new { id=item.Usuar_Id })">
                        <i class="fa fa-trash-o"></i>
                    </a>
                    <a class="btn btn-detalle col-sm-4" href="@Url.Action("Details", new { id=item.Usuar_Id })">
                        <i class="fa fa-eye"></i>
                    </a>
                </div>
            </td>
           
            </tr>
    }

    </table>
</div>

<div class="card-footer">

</div>

</div>

</section>


