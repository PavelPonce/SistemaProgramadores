@model SistemaAcademiaProgramadores.Models.tbUsuarios

@{
    ViewBag.Title = $"tbUsuarios".Substring(2);
    ViewBag.Title = ViewBag.Title.Substring(0, ViewBag.Title.Length - 1);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h1 class="text-primary">Detalle @ViewBag.Title</h1>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href='@Url.Action("Index")' class="btn btn-primary"><i class="glyphicon glyphicon-arrow-left"></i> Regresar</a>
        </div>
    </div>
</div>

<section class="content">

<div class="card">
<div class="card-body form-row">
        
      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.Usuar_Usuario)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Usuar_Usuario)
            </dd>
        </dl>
     </div>

      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.Usuar_Contrasena)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Usuar_Contrasena)
            </dd>
        </dl>
     </div>

      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.Usuar_UltimaSesion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Usuar_UltimaSesion)
            </dd>
        </dl>
     </div>

      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.Usuar_Admin)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Usuar_Admin)
            </dd>
        </dl>
     </div>      
      
      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.tbInstructores2.Perso_Id)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tbInstructores2.Perso_Id)
            </dd>
        </dl>
     </div>

      
    <div class="col-sm-4">
        <dl>
            <dt class="text-primary text-center">
                @Html.DisplayNameFor(model => model.tbRoles2.Roles_Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tbRoles2.Roles_Descripcion)
            </dd>
        </dl>
     </div>      
      
    <p>
            <div class="col-sm-4">
                <a class="btn btn-primary btn-outline col-sm-12" href="@Url.Action("Edit", new { id = Model.Usuar_Id })">
                    <i class="fa fa-edit mr-2"></i>Editar @ViewBag.Title
                </a>
            </div>
        </p>
</div>
<div class="card-footer">
    <div class="card-title text-primary mb-4" style="font-size: 1.5rem;"> Auditoria </div>
    <div class="w-100" style="overflow-x:scroll;">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="thead-justify-content-center">
                    <th class="bg-primary">Accion</th>
                    <th class="bg-primary">Usuario</th>
                    <th class="bg-primary">Fecha</th>    
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Creacion</td>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <td>
