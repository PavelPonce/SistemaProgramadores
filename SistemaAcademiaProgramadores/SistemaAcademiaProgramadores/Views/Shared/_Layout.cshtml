<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Academia de Programadores</title>
    @Styles.Render("~/Content/HTML5_Full_Version/css/bootstrap.css")
    @Styles.Render("~/Content/HTML5_Full_Version/font-awesome/css/font-awesome.css")
    @Styles.Render("~/Content/HTML5_Full_Version/css/plugins/dataTables/datatables.min.css")
    @Styles.Render("~/Content/HTML5_Full_Version/css/animate.css")
    <link href="~/Content/HTML5_Full_Version/css/plugins/dragula/dragula.css" rel="stylesheet" />
    @Styles.Render("~/Content/HTML5_Full_Version/css/style.css")
</head>
<body class="">
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <img alt="image" class="rounded-circle" src="~/Content/HTML5_Full_Version/img/profile_small.jpg" />
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="block m-t-xs font-bold">@Session["Perso_NombreCompleto"]</span>
                                <span class="text-muted text-xs block">@Session["Roles_Descripcion"]</span>
                            </a>
                        </div>
                        <div class="logo-element bg-primary">
                            AHM
                        </div>
                    </li>
                    @Html.Raw(Session["menuHTML"])
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message">Academia de Programadores.</span>
                        </li>
                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Logout", "Home")">
                                    <i class="fa fa-sign-out"></i>Cerrar sesión
                                </a>}
                        </li>
                    </ul>

                </nav>
            </div>
            <div class="wrapper wrapper-content">
                <div class="text-center animated fadeInRightBig">
                    @RenderBody()
                </div>
            </div>
            <div class="footer">
                <div class="float-right">
                    Version <strong>1.0</strong>.
                </div>
                <div>
                    <strong>Copyright</strong> P&V &copy; 2024-2024
                </div>
            </div>

        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/utilitariosScript.js"></script>

    @Scripts.Render("~/Content/HTML5_Full_Version/js/jquery-3.1.1.min.js")
    @Scripts.Render("~/Content/HTML5_Full_Version/js/popper.min.js")
    @Scripts.Render("~/Content/HTML5_Full_Version/js/bootstrap.js")
    @Scripts.Render("~/Content/HTML5_Full_Version/js/plugins/metisMenu/jquery.metisMenu.js")
    @Scripts.Render("~/Content/HTML5_Full_Version/js/plugins/slimscroll/jquery.slimscroll.min.js")
    @Scripts.Render("~/Content/AdminLTE/dist/js/adminlte.js")
    <!-- Custom and plugin javascript -->
    @Scripts.Render("~/Content/HTML5_Full_Version/js/inspinia.js")
    @Scripts.Render("~/Content/HTML5_Full_Version/js/plugins/pace/pace.min.js")
    @Scripts.Render("~/Content/HTML5_Full_Version/js/plugins/dataTables/datatables.min.js")
    @Scripts.Render("~/Content/HTML5_Full_Version/js/plugins/dataTables/dataTables.bootstrap4.min.js")
    @RenderSection("scripts", required: false)
    <script>
        // Upgrade button class name
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                pageLength: 10,
                responsive: true,
                language: {
                    url: '../../Content/HTML5_Full_Version/js/plugins/dataTables/esLanguageDataTable.json'
                },
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'csv' },
                    { extend: 'excel', title: '@ViewBag.Title' },
                    { extend: 'pdf', title: '@ViewBag.Title' },
                ]
            });
        });
    </script>
</body>
</html>