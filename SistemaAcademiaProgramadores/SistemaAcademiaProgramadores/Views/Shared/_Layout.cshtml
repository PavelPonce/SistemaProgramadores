    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body class="">

    <div id="wrapper">

        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <img alt="image" class="rounded-circle" src="~/Content/HTML5_Full_Version/img/profile_small.jpg" />
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="block m-t-xs font-bold">@@Session["Usuario"] .Persona.Nombre</span>
                                <span class="text-muted text-xs block">@@Session["Usuario"].Rol <b class="caret"></b></span>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li>
                                    <a href="@Url.Action("CerrarSesion", "UsuariosController")">
                                        <i class="fa fa-sign-out"></i>Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="logo-element">
                            IN+
                        </div>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-lock"></i> <span class="nav-label">Acceso</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            @*<li>@Html.ActionLink("Pantallas", "Index", "Pantallas")</li>*@
                            @*<li>@Html.ActionLink("Roles", "Index", "Roles")</li>*@
                            <li>
                                <a href="@Url.Action("Index", "Usuarios")">
                                    <i class="fa fa-users"></i> Usuarios
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-wrench"></i> <span class="nav-label">Mantenimiento</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            @*<li>@Html.ActionLink("Departamentos", "Index", "Departamentos")</li>*@
                            @*<li>@Html.ActionLink("Municipios", "Index", "Municipios")</li>*@
                            @*<li>@Html.ActionLink("EstadosCiviles", "Index", "EstadosCiviles")</li>*@
                            @*<li>@Html.ActionLink("Personas", "Index", "Personas")</li>*@
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-book"></i> <span class="nav-label">Academia</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            @*<li>@Html.ActionLink("Instructores", "Index", "Instructores")</li>*@
                            @*<li>@Html.ActionLink("Alumnos", "Index", "Alumnos")</li>*@
                            <li>@Html.ActionLink("Generaciones", "Index", "Generaciones")</li>
                            @*<li>@Html.ActionLink("Cursos", "Index", "Cursos")</li>*@
                        </ul>
                    </li>
                </ul>

            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message">Academia de Programadores.</span>
                        </li>
                        <li>
                            <a href="@Url.Action("CerrarSesion", "UsuariosController")">
                                <i class="fa fa-sign-out"></i>Cerrar sesión 
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-4">
                    <h2>This is main title</h2>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">This is</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <strong>Breadcrumb</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-sm-8">
                    <div class="title-action">
                        <a href="" class="btn btn-primary">This is action area</a>
                    </div>
                </div>
            </div>

            <div class="wrapper wrapper-content">
                <div class="text-center animated fadeInRightBig">
                    @RenderBody()
                </div>
            </div>
            <div class="footer">
                <div class="float-right">
                    Version <strong>1.0</strong>.
                </div>
                <div>
                    <strong>Copyright</strong> P&V &copy; 2024-2024
                </div>
            </div>

        </div>
    </div>

    <!-- Mainly scripts -->
    @*<script src="js/jquery-3.1.1.min.js"></script>*@
    @Scripts.Render("~/bundles/Content/HTML5_Full_Version/js/jquery-3.1.1.min.js")
    @*<script src="js/popper.min.js"></script>*@
    @Scripts.Render("~/bundles/Content/HTML5_Full_Version/js/popper.min.js")

    @*<script src="js/bootstrap.js"></script>*@
    @Scripts.Render("~/bundles/Content/HTML5_Full_Version/js/bootstrap.js")

    @*<script src="js/plugins/metisMenu/jquery.metisMenu.js"></script>*@
    @Scripts.Render("~/bundles/Content/HTML5_Full_Version/js/plugins/metisMenu/jquery.metisMenu.js")

    @*<script src="js/plugins/slimscroll/jquery.slimscroll.min.js"></script>*@
    @Scripts.Render("~/bundles/Content/HTML5_Full_Version/js/plugins/slimscroll/jquery.slimscroll.min.js")

    @Scripts.Render("~/Content/AdminLTE/dist/js/adminlte.js")

    <!-- Custom and plugin javascript -->
    @*<script src="js/inspinia.js"></script>*@
    @Scripts.Render("~/bundles/Content/HTML5_Full_Version/js/inspinia.js")

    @*<script src="js/plugins/pace/pace.min.js"></script>*@
    @Scripts.Render("~/bundles/Content/HTML5_Full_Version/js/plugins/pace/pace.min.js")

    @RenderSection("scripts", required: false)
</body>
