@model SistemaAcademiaProgramadores.Models.tbEstadosCiviles
    @{
            ViewBag.Title = $"tbEstadosCiviles".Substring(2);
    }


@using (Html.BeginForm("Edit",(string)ViewBag.Title))
{
    @Html.AntiForgeryToken()
               <div class="modal-body form-row justify-content-center">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.HiddenFor(model => model.Estci_Id)

            <div class="col-sm-6 mb-2">

                @Html.LabelFor(model => model.Estci_Descripcion, new { @class = "text-primary w-100 text-left" })
                <div>
                    @Html.EditorFor(model => model.Estci_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Estci_Descripcion, "", new { @class = "text-danger" })
                </div>
                </div>
            

       </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" ><i class="fa fa-save"></i> Guardar</button>
                <button type="button" class="btn btn-primary btn-outline" data-dismiss="modal">
                    <i class="fa fa-times"></i> Cancelar
                </button>
            </div>
            <script>
        document.querySelectorAll('.col-sm-6.mb-2').forEach(grupo => {
            grupo.children[1].children[0].addEventListener('focus', () => {
                grupo.children[0].classList.add('text-secondary')
            })
            grupo.children[1].children[0].addEventListener('blur', () => {
                grupo.children[0].classList.remove('text-secondary')
            })
        })
    </script>
  
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
