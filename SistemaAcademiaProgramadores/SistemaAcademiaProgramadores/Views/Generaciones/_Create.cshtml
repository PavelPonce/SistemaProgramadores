@model SistemaAcademiaProgramadores.Models.tbGeneraciones
    @{
        ViewBag.Title = $"tbGeneraciones".Substring(2);  

    }

@using (Html.BeginForm("Create",(string)ViewBag.Title)) 
{
    @Html.AntiForgeryToken()
           <div class="modal-body form-row justify-content-center">
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })

      
            <div class="col-sm-6 mb-2">
                    @Html.LabelFor(model => model.Gener_Nombre, new { @class = "text-primary w-100 text-left" })
                    <div >
                        @Html.EditorFor(model => model.Gener_Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Gener_Nombre, "", new { @class = "text-danger" })
                        </div>
            </div>
      
            <div class="col-sm-6 mb-2">
                    @Html.LabelFor(model => model.Gener_Anhio, new { @class = "text-primary w-100 text-left" })
                    <div >
                        @Html.EditorFor(model => model.Gener_Anhio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Gener_Anhio, "", new { @class = "text-danger" })
                        </div>
            </div>
      
            <div class="col-sm-6 mb-2">
                    @Html.LabelFor(model => model.Gener_FechaInicio, new { @class = "text-primary w-100 text-left" })
                    <div >
                        @Html.EditorFor(model => model.Gener_FechaInicio, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.Gener_FechaInicio, "", new { @class = "text-danger" })
                        </div>
            </div>
      
            <div class="col-sm-6 mb-2">
                    @Html.LabelFor(model => model.Gener_FechaFin, new { @class = "text-primary w-100 text-left" })
                    <div >
                        @Html.EditorFor(model => model.Gener_FechaFin, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.Gener_FechaFin, "", new { @class = "text-danger" })
                        </div>
            </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" ><i class="fa fa-save"></i> Guardar</button>
                <button type="button" class="btn btn-primary btn-outline" data-dismiss="modal">
                    <i class="fa fa-times"></i> Cancelar
                </button>
            </div>
            <script>
        document.querySelectorAll('.col-sm-6.mb-2').forEach(grupo => {
            grupo.children[1].children[0].addEventListener('focus', () => {
                grupo.children[0].classList.add('text-secondary')
            })
            grupo.children[1].children[0].addEventListener('blur', () => {
                grupo.children[0].classList.remove('text-secondary')
            })
        })
    </script>
  
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
