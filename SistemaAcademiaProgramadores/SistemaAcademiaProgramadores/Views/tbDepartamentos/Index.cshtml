@model IEnumerable<SistemaAcademiaProgramadores.Models.tbDepartamentos>

@{
    ViewBag.Title = $"tbDepartamentos".Substring(2);
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="card-title">
                <button id="btnNuevo" type="button" data-toggle="modal" data-target="#modal" class="btn btn-primary col-sm-12 mb-4">
                    <i class="fa fa-plus-square-o"> </i> Nuevo
                </button>
            </div>


            <table class="table table-responsive table-striped table-bordered dataTables-example dataTable">
                <tr class="thead-purple thead-justify-content-center">
                    <th>
                        @Html.DisplayNameFor(model => model.Depar_Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Depar_FechaCreacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Depar_FechaModificacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Depar_Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tbUsuarios.Usuar_Usuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tbUsuarios1.Usuar_Usuario)
                    </th>

                    <th></th>

                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Depar_Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Depar_FechaCreacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Depar_FechaModificacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Depar_Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tbUsuarios.Usuar_Usuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tbUsuarios1.Usuar_Usuario)
                        </td>
                        <td class="col-sm-6">
                            <a class="btn btn-editar col-sm-2" href="@Url.Action("Edit", new { id=item.Depar_Id })">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-danger col-sm-2" href="@Url.Action("Delete", new { id=item.Depar_Id })">
                                <i class="fa fa-trash-o"></i>
                            </a>
                            <a class="btn btn-detalle col-sm-2" href="@Url.Action("Details", new { id=item.Depar_Id })">
                                <i class="fa fa-eye"></i>
                            </a>

                        </td>

                    </tr>
                }

            </table>
        </div>

        <div class="card-footer">

        </div>

    </div>

</section>

<script>
    $('#btnNuevo').click(function () {
        $('modal').modal('show');
    })
</script>



<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @Html.Partial("_Create", new SistemaAcademiaProgramadores.Models.tbDepartamentos())
        </div>
    </div>
</div>

