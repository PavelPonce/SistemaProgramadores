        </div>
    </div>
    <div class="col-sm-6 mb-2">
        @Html.LabelFor(model => model.Depar_Descripcion)
        <div>
            @Html.EditorFor(model => model.Depar_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Depar_Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</div>
     
    
   
}


